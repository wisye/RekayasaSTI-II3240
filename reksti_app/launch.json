    "version": "0.2.0",
    "configurations": [
        {
            "name": "reksti_app (no Impeller)", // You can rename this for clarity
            "request": "launch",
            "type": "dart",
            "flutterMode": "run", // Ensures it runs without debugging by default
            "program": "reksti_app/lib/main.dart",
            "args": [
                "--no-enable-impeller"
            ]
        },
        {
            "name": "reksti_app",
            "cwd": "reksti_app",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "reksti_app (profile mode)",
            "cwd": "reksti_app",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "reksti_app (release mode)",
            "cwd": "reksti_app",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}